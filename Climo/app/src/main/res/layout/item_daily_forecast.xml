<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@drawable/gredient_backgound"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gredient_backgound"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/dailyDayName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Monday"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/dailyWeatherIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Daily Weather Icon"
            android:src="@drawable/ic_warning" />

        <TextView
            android:id="@+id/dailyWeatherDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Clear Sky"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dailyTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="10°C / 20°C"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>